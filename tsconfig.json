{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "esnext",
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
